@model IEnumerable<FinanzasPersonalesWeb.Models.Transacciones>

@{
    ViewBag.Title = "Transacciones";
}

<div class="card-header row">

    <h2>Transacciones</h2>

</div>
<div class="row col-md-12" style="margin-top:10px">

    <div class="col-md-1">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#TranModal">
            @*<span class="spinner-border spinner-border-sm"></span>*@
            Gastos
        </button>
    </div>
    <div class="col-md-1">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#TranModal">
            @*<span class="spinner-border spinner-border-sm"></span>*@
            Ingresos
        </button>
    </div>
</div>
<div class="col-md-12" style="padding-bottom:20px;">

</div>

<table class="table table-striped table-hover" id="TransT">
    <thead class="bg-info">
        <tr>
            <th>
                Descripción
            </th>
            <th>
                Tipo Transacción
            </th>

            <th>
                Monto
            </th>
            <th>
                Cuenta
            </th>
            <th>
                Fecha
            </th>

            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TranDescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransaccionesTipos.TranTiposDescripcion)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.TranMonto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cuentas.CuentaDescripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TranFecha)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.TranId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.TranId })
                </td>
            </tr>
        </tbody>
    }

</table>

<!-- Modal Ingresos /Gastos -->
<div class="modal" id="TranModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Ingresar Gastos</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <div class="form-horizontal col-md-12">
                    <!-- Modal body -->
                    <div class="form-group">
                        <label>Tipo de transacción</label>
                        <select class="custom-select">
                            <option selected>--Seleccione--</option>
                            <option value="1">GASTOS</option>
                            <option value="2">INGRESOS</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Monto</label>
                        <input type="text" class="form-control col-md-12" />
                    </div>

                    <div class="form-group">
                        <label>Descripción</label>
                        <input type="text" class="form-control col-md-12" />
                    </div>

                    <div class="form-group">
                        <label>Cuenta</label>
                        <select class="custom-select">
                            <option selected>--Seleccione--</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>

                    <div class="form-inline">
                        <div class="form-check col-md-4">
                            <label class="form-check-label">
                                Es recurrente?
                            </label>
                            <input type="checkbox" class="form-check-input" value="">
                        </div>
                        <div class="col-md-8 form-inline">

                            <label>Día de corte</label>

                            <div class="col-md-2">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>



                </div>
            </div>

            <!-- Modal footer -->
            <div class="modal-footer">

                <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" data-dismiss="modal">Crear</button>
            </div>

        </div>
    </div>
</div>

<!-- Modal Editar -->
